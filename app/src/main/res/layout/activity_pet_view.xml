<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/verticalforest">

    <!-- ðŸŒ¿ Pet Info Centered Top -->
    <LinearLayout
        android:id="@+id/pet_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#80FFFFFF"
        android:layout_marginTop="12dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_pet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buddy"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tv_pet_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level: 1"
            android:textSize="14sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tv_pet_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Happy"
            android:textSize="14sp"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <!-- ðŸ“Š Stats Container (Top-Left, below pet info) -->
    <LinearLayout
        android:id="@+id/stats_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/pet_info_container"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#80FFFFFF">

        <!-- Row: XP -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_xp_label"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="XP:"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>
            <ProgressBar
                android:id="@+id/pb_xp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="120dp"
                android:layout_height="10dp"
                android:progressDrawable="@drawable/progress_bar_flat"
                android:progressTint="#2196F3"
                android:progress="40"/>
            <TextView
                android:id="@+id/tv_xp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <!-- Row: Hunger -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_hunger_label"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="Hunger:"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>
            <ProgressBar
                android:id="@+id/pb_hunger"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="120dp"
                android:layout_height="10dp"
                android:progressDrawable="@drawable/progress_bar_flat"
                android:progressTint="#F44336"
                android:progress="60"/>
            <TextView
                android:id="@+id/tv_hunger_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <!-- Row: Happiness -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_happiness_label"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="Happiness:"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>
            <ProgressBar
                android:id="@+id/pb_happiness"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="120dp"
                android:layout_height="10dp"
                android:progressDrawable="@drawable/progress_bar_flat"
                android:progressTint="#FFC107"
                android:progress="70"/>
            <TextView
                android:id="@+id/tv_happiness_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <!-- Row: Energy -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_energy_label"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="Energy:"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>
            <ProgressBar
                android:id="@+id/pb_energy"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="120dp"
                android:layout_height="10dp"
                android:progressDrawable="@drawable/progress_bar_flat"
                android:progressTint="#4CAF50"
                android:progress="50"/>
            <TextView
                android:id="@+id/tv_energy_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

    </LinearLayout>


    <!-- ðŸŸ© Button Panel (Top-Right, below pet info) -->
    <LinearLayout
        android:id="@+id/button_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/pet_info_container"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_feed"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Feed"
            android:background="@drawable/outlined_button_green" />

        <Button
            android:id="@+id/btn_tuck_in"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Tuck In"
            android:background="@drawable/outlined_button_green"
            android:layout_marginTop="6dp" />

        <Button
            android:id="@+id/btn_level_up"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Level Up"
            android:background="@drawable/outlined_button_green"
            android:layout_marginTop="6dp" />

        <Button
            android:id="@+id/btn_background"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Background"
            android:background="@drawable/outlined_button_green"
            android:textSize="11sp"
            android:layout_marginTop="6dp" />


    </LinearLayout>

    <!-- ðŸ¾ Pet Avatar Center-Bottom -->
    <ImageView
        android:id="@+id/iv_pet"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/dogawake1"
        android:adjustViewBounds="true"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

