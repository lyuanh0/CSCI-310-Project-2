<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>
        <ImageView
            android:id="@+id/avatar0"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/catawake1"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:clipToOutline="true" />
        <TextView
            android:id="@+id/hello_user_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello Username"
            android:gravity="center"
            android:textSize="18sp" />

        <!-- Username -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new username"
            android:layout_marginBottom="8dp"/>
        <Button
            android:id="@+id/btn_save_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Username"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.Button.OutlinedButton"/>

        <!-- Birthday -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birthday"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/et_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MM-DD-YYYY"
            android:inputType="date"
            android:layout_marginBottom="8dp"/>
        <Button
            android:id="@+id/btn_save_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Birthday"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.Button.OutlinedButton"/>

        <!-- Avatar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your avatar:"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/avatar1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pf1"
                android:layout_margin="6dp"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:clipToOutline="true" />

            <ImageView
                android:id="@+id/avatar2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pf2"
                android:layout_margin="6dp"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:clipToOutline="true" />

            <ImageView
                android:id="@+id/avatar3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pf3"
                android:layout_margin="6dp"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:clipToOutline="true" />
            <ImageView
                android:id="@+id/avatar4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pf4"
                android:layout_margin="6dp"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:clipToOutline="true" />
        </LinearLayout>

        <!-- Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new password"
            android:layout_marginBottom="8dp"/>
        <Button
            android:id="@+id/btn_save_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Password"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.Button.OutlinedButton"/>
        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new Email"
            android:layout_marginBottom="8dp"/>
        <Button
            android:id="@+id/btn_save_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save email"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.Button.OutlinedButton"/>

        <!-- Logout -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:backgroundTint="@android:color/holo_red_dark"/>
    </LinearLayout>
</ScrollView>
