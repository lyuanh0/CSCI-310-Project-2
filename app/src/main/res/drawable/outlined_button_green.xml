<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Green fill -->
    <solid android:color="#4CAF50" /> <!-- or your preferred green -->

    <!-- Black outline -->
    <stroke
        android:width="2dp"
        android:color="#000000" />

    <!-- Rounded corners (optional) -->
    <corners android:radius="8dp" />

    <!-- Optional padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
